@model IEnumerable<ThAmCo.Events.Data.EventClass>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<h4>Upcoming Events</h4>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EventType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EventDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Bookings)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in ViewBag.Upcoming)
        {
            <tr>
                <td>
                    @item.EventType
                </td>
                <td>
                    @item.EventTitle
                </td>
                <td>
                    @item.EventDate
                </td>
                <td>
                    @{var count = 0;
                    }

                    @foreach (var booking in ViewBag.Bookings)
                    {

                        if (booking.EventId == item.EventId)
                        {
                            count++;
                        }
                    }
                    @count
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.EventId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.EventId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.EventId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

