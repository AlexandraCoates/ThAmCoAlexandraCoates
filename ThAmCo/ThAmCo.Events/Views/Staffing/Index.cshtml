@model IEnumerable<ThAmCo.Events.Data.Staffing>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.eventClass.EventTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.staff.NameFirst)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.eventClass.EventTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.staff.NameFirst)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.StaffingId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.StaffingId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.StaffingId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
